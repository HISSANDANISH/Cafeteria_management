<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Google fonts %>
    <%# Nav bar %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Cedarville+Cursive|Sacramento&display=swap' %>
    <%# Welcome block %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap' %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header id="main-header">
		  <div class="container navbar">
          <div class="left-part">
            <%= link_to "/" do %>
              <h1 class="navbar-title"> <i class="fa fa-cutlery brand-icon" aria-hidden="true"></i>Dine</h1>
            <% end %>
          </div>
          <div class="right-part">
            <p class="quote">Experience the flavour</p>
			      <div class="tags">
			      	<%= link_to "Home", "/",class: "tag" %>
			      	<%= link_to "About", "#welcome-block",class: "tag" %>
			      	<%= link_to "Contact", "#footer",class: "tag" %>
              <% if @current_user %>
                <%= link_to "SignOut", "/signout",method: "delete", class: "tag" %>
              <% else %>
                <% if @signUpFlag %>
                <%= link_to "SignIn", new_session_path,class: "tag" %>
                <% else %>
                <%= link_to "SignUp", new_user_path,class: "tag" %>
                <% end %>
              <% end %>
			      </div>
          </div>
		  </div>
	  </header>

    <%# --------------------------------Start of sidepane--------------------------- %>

    <% if @current_user %>
      <div class = "UserHeader">
        <p> Welcome <%= @current_user.name %>! </p>
        <p> You are <%= @current_user.role %> </p>
        <p> <%= link_to "Sign-out", "/signout",method: "delete" %> </p>
      </div>

      <p> <%= link_to "Menus", menus_path %> </p>

      <p> <%= link_to "Cart", carts_path %> </p>
      <p> <%= link_to "Orders", orders_path%> </p>
      <% if @current_user.role == "owner" %>
        <p> <%= link_to "Users", users_path %> </p>
        <p> <%= link_to "ChangeMenu", change_menus_path%> </p>
        <p> <%= link_to "Reports", reports_path%> </p>
      <% end %>


    <% end %>


    <%# --------------------------------End of side pane-------------------------------- %>

    <% if flash[:error] %>
      <p class = "Flash-error">
        <%= flash[:error] %>
      </p>
    <% end %>
    <% if flash[:notice] %>
      <p class = "Flash-notice">
        <%= flash[:notice] %>
      </p>
    <% end %>

    <%= yield %>

  <section id="footer">
    <div class="container footer-grid">
      <div class="footer-left">
        <h1 class="footer-title">Dine</h1>
        <div class="social">
          <%= link_to "https://www.google.com" do %>
            <i class="fa fa-twitter fa-2x social-icon" aria-hidden="true"></i>
          <% end %>
          <%= link_to "https://www.youtube.com" do %>
            <i class="fa fa-instagram fa-2x social-icon" aria-hidden="true"></i>
          <% end %>
          <%= link_to "https://www.bing.com" do %>
            <i class="fa fa-facebook fa-2x social-icon" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
      <div class="footer-right">
        <div class="footer-right-grid">
          <div class="info">
            <%= link_to "Careers & Franchise", new_applicant_path,class: "info-tag" %>
            <%= link_to "FAQ", "/",class: "info-tag" %>
            <%= link_to "Terms & Conditions", "/",class: "info-tag" %>
          </div>
          <div class="address">
            <p> Door No. 1-3-130/2 </p>
            <p> Adam Avenue </p>
            <p> Banjara Hills </p>
            <p> Hyderabad </p>
          </div>
        </div>
        <div class="mailus">
          <%= mail_to "help@dine.com", "Mail Us!", cc: "clerk1@dine.com" %>
        <div>
      </div>
    </div>
  </section>

  </body>
</html>
