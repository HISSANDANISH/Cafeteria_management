<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%# --------------------------------Start of sidepane--------------------------- %>

    <% if session[:current_user_id] %>
      <div class = "UserHeader">
        <p> Welcome <%= User.find(session[:current_user_id]).name %>! </p>
        <p> You are <%= User.find(session[:current_user_id]).role %> </p>
        <p> <%= link_to "Sign-out", "/signout",method: "delete" %> </p>
      </div>

      <p> <%= link_to "Menus", menus_path %> </p>

      <% if User.find(session[:current_user_id]).role == "owner" %>
        <p> <%= link_to "Users", users_path %> </p>
      <% end %>


    <% end %>


    <%# --------------------------------End of side pane-------------------------------- %>

    <% if flash[:error] %>
      <p class = "Flash-error">
        <%= flash[:error] %>
      </p>
    <% end %>

    <%= yield %>
  </body>
</html>
