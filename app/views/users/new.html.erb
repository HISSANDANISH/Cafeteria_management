<p class = "NewUsers-title"> Welcome new user! </p>

<%= form_with(url: users_path, method: "post") do %>
    <div class = "Form-section">
      <p class = "FormInput-label">Name: </p>
      <%= text_field_tag(:name, nil, class: "Form-input", placeholder: "Enter your first name", autofocus: "autofocus") %>
    </div>
    <div class = "Form-section">
      <p class = "FormInput-label">email: </p>
      <%= email_field(nil, nil, name: "email", class: "Form-input", placeholder: "Enter your E-mail") %>
    </div>
    <div class = "Form-section">
      <p class = "FormInput-label">Password: </p>
      <%= password_field(nil, nil, name: "password", class: "Form-input")%>
    </div>
    <div class = "Form-section">
      <p class = "FormInput-label">Contact No: </p>
      <%= telephone_field(nil, nil, name: "phone", class: "Form-input") %>
    </div>
    <div class = "Form-section">
      <p class = "FormInput-label">Address: </p>
      <%= text_area_tag(:address, nil, size: "35x6",placeholder: "Enter Your address") %>
    </div>
    <div class = "Form-section">
      <%= submit_tag("Sign-up!", class: "Form-submit") %>
    </div>
<% end %>
